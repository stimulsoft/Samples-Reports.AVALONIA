<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Change_Theme_in_Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Change_Theme_in_Avalonia.Views"
		Width="450" Height="300"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="300"
        x:Class="Creating_Report_at_Runtime.Views.MainWindow"
		WindowStartupLocation="CenterScreen"
        Icon="/Assets/avalonia-logo.ico"
        Title="Creating Report at Runtime">
	<Grid>
		<Grid HorizontalAlignment="Center"
			  VerticalAlignment="Center"
			  RowDefinitions="*,12,*">
			<Button x:Name="buttonCreateSimpleReport" Width="200"
					HorizontalContentAlignment="Center"
					Content="Create Simple Report"
					Click="ButtonCreateSimpleReport_Click"/>

			<Button x:Name="buttonCreateCrossTab" Grid.Row="2" Width="200"
					HorizontalContentAlignment="Center"
					Content="Create Cross-Tab"
					Click="ButtonCreateCrossTab_Click"/>
		</Grid>
	</Grid>
</Window>
